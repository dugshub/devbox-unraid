# DevBox Configuration
# Copy this file to .env and customize as needed

# Container settings
CONTAINER_NAME=devbox-unraid
HOSTNAME=devbox

# Port configuration
SSH_PORT=2222

# Directory mappings
PROJECTS_DIR=/mnt/users/projects
APPDATA_DIR=/mnt/user/appdata/devbox

# Timezone
TZ=America/New_York

# Git configuration
GIT_AUTHOR_NAME=Your Name
GIT_AUTHOR_EMAIL=your.email@example.com

# Claude API (optional)
CLAUDE_API_KEY=

# Resource limits
CPU_LIMIT=4
MEMORY_LIMIT=8G
CPU_RESERVATION=1
MEMORY_RESERVATION=2G